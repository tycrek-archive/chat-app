{
	"server": {
		"port": 34682,
		"https": false,
		"privateKey": "",
		"fullchain": ""
	},

	"security": {
		"saltRounds": 10,
		"tokenLength": 32
	},

	"publicRoutes": ["/user/login", "/user/create"],
	"routes": {
		"user": ["login", "logout"]
	},
	"qs": [
		"session.create",
		"session.renew",
		"session.expire",
		"session.get",

		"user.create",
		"user.info"
	],

	"response": {
		"unauthorized": {
			"code": 401,
			"reason": "Unauthorized"
		},
		"forbidden": {
			"code": 403,
			"reason": "Forbidden"
		},
		"loginFailed": {
			"code": 400,
			"reason": "Invalid username or password"
		}
	}
}